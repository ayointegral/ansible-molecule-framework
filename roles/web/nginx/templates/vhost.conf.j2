# {{ ansible_managed }}
# Virtual Host: {{ item.server_name | default('default') }}

server {
    listen {{ item.listen | default(80) }}{% if item.ssl | default(false) %} ssl{% endif %}{% if item.default_server | default(false) %} default_server{% endif %};
{% if item.listen_ipv6 | default(true) %}
    listen [::]:{{ item.listen | default(80) }}{% if item.ssl | default(false) %} ssl{% endif %}{% if item.default_server | default(false) %} default_server{% endif %};
{% endif %}

    server_name {{ item.server_name | default('_') }};
{% if item.root is defined %}
    root {{ item.root }};
{% endif %}
{% if item.index is defined %}
    index {{ item.index }};
{% endif %}

{% if item.ssl | default(false) %}
    # SSL Configuration
    ssl_certificate {{ item.ssl_certificate | default(nginx_ssl_certificate) }};
    ssl_certificate_key {{ item.ssl_certificate_key | default(nginx_ssl_certificate_key) }};
{% if nginx_ssl_dhparam is defined %}
    ssl_dhparam {{ nginx_ssl_dhparam }};
{% endif %}

{% if nginx_hsts_enabled | default(false) %}
    # HSTS
    add_header Strict-Transport-Security "max-age={{ nginx_hsts_max_age }}{% if nginx_hsts_include_subdomains %}; includeSubDomains{% endif %}{% if nginx_hsts_preload %}; preload{% endif %}" always;
{% endif %}
{% endif %}

{% if nginx_security_headers is defined %}
    # Security Headers
{% for header, value in nginx_security_headers.items() %}
    add_header {{ header }} "{{ value }}" always;
{% endfor %}
{% endif %}

    # Access and Error logs
{% if item.access_log is defined %}
    access_log {{ item.access_log }};
{% else %}
    access_log /var/log/nginx/{{ item.server_name | default('default') }}-access.log;
{% endif %}
{% if item.error_log is defined %}
    error_log {{ item.error_log }};
{% else %}
    error_log /var/log/nginx/{{ item.server_name | default('default') }}-error.log;
{% endif %}

{% if item.locations is defined %}
    # Locations
{% for location in item.locations %}
    location {{ location.path }} {
{% if location.options is defined %}
{% for option in location.options %}
        {{ option }};
{% endfor %}
{% endif %}
{% if location.proxy_pass is defined %}
        proxy_pass {{ location.proxy_pass }};
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
{% endif %}
    }

{% endfor %}
{% endif %}
{% if item.extra_config is defined %}
    # Extra Configuration
{{ item.extra_config | indent(4) }}
{% endif %}
}
