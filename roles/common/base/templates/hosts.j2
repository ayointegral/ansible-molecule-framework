# {{ ansible_managed }}
# /etc/hosts - managed by Ansible

127.0.0.1   localhost localhost.localdomain
::1         localhost localhost.localdomain ip6-localhost ip6-loopback

# Current host
{{ ansible_default_ipv4.address | default('127.0.1.1') }}  {{ base_hostname }} {{ base_hostname.split('.')[0] }}

# Additional hosts entries
{% for entry in base_hosts_entries | default([]) %}
{{ entry.ip }}  {{ entry.hostnames | join(' ') }}
{% endfor %}

# The following lines are desirable for IPv6 capable hosts
fe00::0     ip6-localnet
ff00::0     ip6-mcastprefix
ff02::1     ip6-allnodes
ff02::2     ip6-allrouters
